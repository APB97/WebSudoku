<input role="status" class="text-center sudoku-input sudoku-input-var @AdditionalClass" type="@InputType" maxlength="1" min="1" max="9" readonly="@ReadOnly" value="@Value" @onchange="OnValueChanged"/>

@code {
    [Parameter]
    public EventCallback<ChangeEventArgs> OnValueChanged { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; }

    [Parameter]
    public string Value { get; set; } = string.Empty;

    [Parameter]
    public bool IsMobileDevice { get; set; }

    protected string AdditionalClass => ReadOnly ? "input-readonly" : "input-editable";

    protected string FontWeight => ReadOnly ? "bold" : "normal";

    protected string Color => ReadOnly ? "black" : "gray";

    protected string InputType => ReadOnly ? "text" : "number";

    protected int Indent => ReadOnly ? 0 : 16;
}
