<input class="text-center sudoku-input" type="text" maxlength="1" readonly="@ReadOnly" value="@Value" style="position:relative; width:100%; font-weight:@FontWeight; color:@Color; border: none; aspect-ratio:1/1" @onchange="OnValueChanged"/>

@code {
    [Parameter]
    public EventCallback<ChangeEventArgs> OnValueChanged { get; set; }

    [Parameter]
    public bool ReadOnly { get; set; }

    [Parameter]
    public string Value { get; set; } = string.Empty;

    protected string FontWeight => ReadOnly ? "bold" : "normal";

    protected string Color => ReadOnly ? "black" : "gray";
}
