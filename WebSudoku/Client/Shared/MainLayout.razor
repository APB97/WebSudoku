@inherits LayoutComponentBase

@inject NavigationManager Nav

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (Nav.Uri.EndsWith("sudoku/") || Nav.Uri.EndsWith("sudoku"))
            {
                <div class="justify-content-start" style="flex: auto;">
                        <text>Your time: </text>
                        <TimerDisplay/>
                </div>
            }
            <a href="https://github.com/APB97/WebSudoku" target="_blank">Code</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
